<% include ../partials/headlogin %>
<div ng-controller="registerController">
    <div class="image-container set-full-height" style="background-image: url(' /img/wizard.jpg')">
        <!--  Made With Get Shit Done Kit  -->
        <a class="made-with-mk hidden-xs">
            <div class="brand">
                <i class="fa fa-mobile" aria-hidden="true"></i>
            </div>
            <div class="made-with">
                Made with <strong>AppOut</strong>
            </div>
        </a>
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="orange" id="wizardProfile">
                            <form action="" method="" name="frmRegister" novalidate>
                                <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
                                <div class="wizard-header">
                                    <h3>
                                        <b>BUILD</b> YOUR PROFILE <br>
                                        <small>This information will let us know more about you.</small>
                                    </h3>
                                </div>
                                <div class="wizard-navigation">
                                    <ul>
                                        <li>
                                            <a href="#about" data-toggle="tab">About</a>
                                        </li>
                                        <li>
                                            <a href="#address" data-toggle="tab">Address</a>
                                        </li>
                                        <li>
                                            <a href="#type" data-toggle="tab">Account</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div class="tab-pane" id="about">
                                        <div class="row">
                                            <h4 class="info-text"> Let's start with the basic information</h4>
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src=" /img/default-avatar.png" class="picture-src" id="wizardPicturePreview" title="" />
                                                        <input type="file" id="wizard-picture">
                                                    </div>
                                                    <h6>Choose Picture</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>
                                                        User Name <small>(required)</small>
                                                    </label>
                                                    <input name="username" type="text" class="form-control" ng-model="register.StoreName" placeholder="Enter your name.." required="">
                                                </div>
                                                <div class="form-group">
                                                    <label>
                                                        Password <small>(required)</small>
                                                    </label>
                                                    <input name="password1" type="password" minlength="6" class="form-control" ng-model="register.Password" placeholder="Enter your password.." required="">
                                                </div>
                                                <div class="form-group">
                                                    <label>
                                                        Re-enter Password <small>(required)</small>
                                                    </label>
                                                    <input name="password2" type="password" minlength="6" class="form-control" ng-model="register.rePassword" placeholder="RE-enter your password.." required="">
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>
                                                        email <small>(required)</small>
                                                    </label>
                                                    <input name="email" id="email" type="email" class="form-control" ng-model="register.Email" placeholder="Enter your email.." required="">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="address">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <h4 class="info-text"> Are you living in a nice area? </h4>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>City</label>
                                                    <input type="text" class="form-control" ng-model="register.City" placeholder="Enter your city..">
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Country</label>
                                                    <br>
                                                    <select name="country" ng-model="selectedCity" class="form-control">
                                                        <option value="59067579734d1d32590f51dd" selected> Egypt </option>
                                                        <option value="590676e7734d1d32590f5248"> Italy </option>
                                                        <option value="59067906734d1d32590f529b"> Turkey </option>
                                                        <option value="59067b18734d1d32590f531a"> Dubai </option>
                                                        <option value="59067b96734d1d32590f5335"> France </option>
                                                        <option value="59196d1da4d87d11d82559c4"> Estonia </option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Adress</label>
                                                    <input type="text" class="form-control" ng-model="register.Address" placeholder="Enter your address..">
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>About Me</label>
                                                    <div class="form-group label-floating">
                                                        <textarea class="form-control" rows="5" ng-model="register.Description" placeholder="Enter Description of your store.." style="resize: none;"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane catigories" id="type">
                                        <h4 class="info-text">What type of location do you have? </h4>
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <% if ( categories.length > 0  ){ %>
                                                <% categories.forEach(function(category){ %>
                                                <div class="col-md-3 col-xs-6">
                                                    <div class="choice" ng-click="chooseCategory('<%= category._id %>')" data-toggle="wizard-radio" rel="tooltip" title="Select this option if you have a house.">
                                                        <input type="radio" name="type" value="House">
                                                        <div class="icon">
                                                            <img src=" <%= category.Img %>" class="picture-src" id="wizardPicturePreview" title="" />
                                                        </div>
                                                        <h6><%= category.Name %></h6>
                                                    </div>
                                                </div>
                                                <% }); %>
                                                <% }else{ %>
                                                <p class="text-center">There is no galleries</p>
                                                <% } %>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-footer height-wizard">
                                    <div class="col-sm-8 col-sm-offset-2 alert-danger clear" ng-show="errdiv">
                                        <span class="errorFont text-center" ng-show="errMsg"> Incorrect data user name or email it can be registered before please check your data</span>
                                    </div>
                                    <div class="pull-right">
                                        <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Next' />
                                        <input type='button' ng-click="registerStore()" class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finish' />
                                    </div>
                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- wizard container -->
                </div>
            </div>
            <!-- end row -->
        </div>
        <!--  big container -->
        <div class="footer">
            <div class="container">
                Made with <i class="fa fa-heart heart"></i><a href="http://appout.co">AppOut.LLC</a>
            </div>
        </div>
    </div>
</div>
<!--   Core JS Files   -->
<% include ../partials/loginandregisterjsfiles %>
