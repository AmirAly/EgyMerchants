<!doctype html>
<html lang="en">
  <head>
    <% include ../partials/headpages %>
    <title>Galleries</title>
  </head>

  <body ng-app='egm' ng-controller='galleriesController'>

    <div class="wrapper">

      <div class="sidebar" data-color="purple" data-image="/img/sidebar-1.jpg">

        <div class="logo">
          <a href="http://appout.co" class="simple-text">
            AppOut.LLC
          </a>
        </div>

        <div class="sidebar-wrapper">
          <ul class="nav">
            <li class="active">
              <a href='Galleries.html'>
                <i class="material-icons">dashboard</i>
                <p>Galleries</p>
              </a>
            </li>
            <li>
              <a href="user.html">
                <i class="material-icons">person</i>
                <p>User Profile</p>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="main-panel">
        <nav class="navbar navbar-transparent navbar-absolute">
          <div class="container-fluid top">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Galleries</a>
            </div>
            <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target=".bs-example-modal-lg">Add Gallery</button>
          </div>
        </nav>
        <div class="content">
          <div class="container-fluid">
            <!-- Start Breadcrumbs -->
            <div class="row">
              <div class="col-md-12">
                <ol class="breadcrumb">
                  <li class="active">Galleries</li>
                </ol>
              </div>
            </div>
            <!-- End Breadcrumbs -->
            <div class="row">
              <div class="col-md-4"  ng-repeat="gallery in galleries">
                <a href="Edit%20Gallary.html">
                  <div class="card">
                    <div class="card-header card-chart">
                      <img src="{{gallery.Img}}">
								    </div>
                    <div class="card-content">
                      <h4 class="title">{{gallery.Title}}</h4>
                      <p class="category">{{gallery.Desc}}</p>
                    </div>
                    <div class="card-footer">
                      <div class="stats">
                        <a href="Edit%20Gallary.html">
                          <i class="fa fa-cogs" aria-hidden="true"></i> Edit
                        </a>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            </div>

              <!--<div class="col-md-4">
              <a href="Edit%20Gallary.html">
                <div class="card">
                  <div class="card-header card-chart">
                    <img src="/img/cover.jpeg">
								</div>
                  <div class="card-content">
                    <h4 class="title">Completed Tasks</h4>
                    <p class="category">Last Campaign Performance</p>
                  </div>
                  <div class="card-footer">
                    <div class="stats">
                      <a href="Edit%20Gallary.html">
                        <i class="fa fa-cogs" aria-hidden="true"></i> Edit
                      </a>
                    </div>
                  </div>
                </div>
              </a>
            </div>-->

            </div>
        </div>
      </div>


      <footer class="footer">
        <% include ../partials/footerpages %>
      </footer>
    </div>
    </div>
    <!-- Start Modal -->
    <div class="modal fade bs-example-modal-lg" tabindex="1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Add Gallery</h4>
          </div>
          <div class="modal-body">
            <div class="content">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-md-8">
                    <div class="card">
                      <div class="card-header" data-background-color="orange">
                        <h4 class="title">Creat Gallery</h4>
                        <p class="category">Creat A New Gallery</p>
                      </div>
                      <div class="card-content">
                        <form>
                          <div class="row">
                            <div class="col-md-5">
                              <div class="form-group label-floating">
                                <label class="control-label">Gallery Name</label>
                                <input type="text" class="form-control" >
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-md-12">
                              <div class="form-group">
                                <div class="form-group label-floating">
                                  <label class="control-label"> About Gallery</label>
                                  <textarea class="form-control" rows="5"></textarea>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="clearfix"></div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="card">
                      <div class="card-header card-chart">
                        <img src="/img/cover.jpeg">
                                                        </div>
                      <div class="card-content">
                        <h4 class="title">Completed Tasks</h4>
                        <p class="category">Last Campaign Performance</p>
                      </div>
                      <div class="card-footer">
                        <div class="stats">
                          <i class="fa fa-cogs" aria-hidden="true"></i> Edit
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- End Modal -->


    <!--   Core JS Files   -->
    <% include ../partials/pagesjsfiles %>

    <!--controller-->
    <script src="/js/controllers/galleriescontroller.js"></script>

  </body>

</html>
