<% include ../partials/headpages %>
<div ng-controller='galleriesController'>
    <div class="loaderContainer" ng-show="loading"></div>
    <div class="loader" ng-show="loading"></div>
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="/img/sidebar-1.jpg">
            <div class="logo">
                <a href="http://appout.co" class="simple-text">
                    AppOut.LLC
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active">
                        <a href='/eg/g/galleries/{{storeId}}'>
                            <i class="material-icons">dashboard</i>
                            <p>Galleries</p>
                        </a>
                    </li>
                    <li>
                        <a href="/eg/store/{{storeId}}">
                            <i class="material-icons">person</i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li ng-click="signOut()" class="cursorPointer">
                        <a>
                            <i class="material-icons">person</i>
                            <p>Sign Out</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-transparent navbar-absolute">
                <div class="container-fluid top">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <h4>Galleries</h4>
                    </div>
                    <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target=".bs-example-modal-lg">Add Gallery</button>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    <!-- Start Breadcrumbs -->
                    <div class="row">
                        <div class="col-md-12">
                            <ol class="breadcrumb">
                                <li class="active">Galleries</li>
                            </ol>
                        </div>
                    </div>
                    <!-- End Breadcrumbs -->
                    <div class="row">
                        <% if ( galleries.length > 0  ){ %>
                        <% galleries.forEach(function(gallery){ %>
                        <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header card-chart">
                                        <img src="<%=gallery.DisplayPicture%>">
                                    </div>
                                    <div class="card-content">
                                        <h4 class="title itemTitle"><%= gallery.Title %></h4>
                                        <p class="category"><%= gallery.Description %></p>
                                    </div>
                                    <div class="card-footer">
                                        <div class="stats">
                                            <a ng-click="moveToGallery('<%=gallery._id%>')" class="cursorPointer">
                                                <i class="fa fa-cogs" aria-hidden="true"></i> Edit
                                            </a>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <% }); %>
                        <% }else{ %>
                        <p class="text-center">There is no galleries</p>
                        <% } %>
                    </div>


                </div>

            </div>
            <footer class="footer">
                <% include ../partials/footerpages %>
            </footer>
        </div>


    </div>

    <!-- Start Modal -->
    <div class="modal fade bs-example-modal-lg" tabindex="1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Add Gallery</h4>
                </div>
                <div class="modal-body">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header" data-background-color="orange">
                                            <h4 class="title">Create Gallery</h4>
                                            <p class="category">Create A New Gallery</p>
                                        </div>
                                        <div class="card-content">
                                            <form name="frmAddGallery">
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <div class="form-group label-floating">
                                                            <label class="control-label">Gallery Name</label>
                                                            <input type="text" class="form-control" ng-model="gallery.Title" required pattern="^.{1,35}$" name="galleryTitle" id="galleryTitle">
                                                            <span ng-show="frmAddGallery.galleryTitle.$dirty && frmAddGallery.galleryTitle.$invalid">
                                                                <span class="errorFont" ng-show="frmAddGallery.galleryTitle.$error.required">Required</span>
                                                                <span class="errorFont" ng-show="frmAddGallery.galleryTitle.$error.pattern">Gallery name is too long</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <div class="form-group label-floating">
                                                                <label class="control-label"> About Gallery</label>
                                                                <textarea class="form-control" rows="3" ng-model="gallery.Description" required pattern="^.{1,200}$" name="galleryDesc" id="galleryDesc"></textarea>
                                                                <span ng-show="frmAddGallery.galleryDesc.$dirty && frmAddGallery.galleryDesc.$invalid">
                                                                    <span class="errorFont" ng-show="frmAddGallery.galleryDesc.$error.required">Required</span>
                                                                    <span class="errorFont" ng-show="frmAddGallery.galleryDesc.$error.pattern">Gallery description is too long</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header card-chart">
                                            <!--upload img-->
                                            <div>
                                                <img fallbacksrc="" id="imgItem" ng-click="ShowFileSelector()" class="img-responsive cursorPointer imgItem" src="/img/add.gif" />
                                                <input type="file" onchange="convertImgToBase64URL(event)" id="uploadItemImage" class="hide" />
                                            </div>
                                        </div>
                                        <div class="card-content">
                                            <h4 class="title itemTitle">{{gallery.Title}}</h4>
                                            <p class="category">{{gallery.Description}}</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" ng-click="addGallery()" ng-disabled="frmAddGallery.$invalid" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Modal -->
</div>
<!--   Core JS Files   -->
<% include ../partials/pagesjsfiles %>

