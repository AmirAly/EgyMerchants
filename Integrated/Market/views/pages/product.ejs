<% include ../partials/pagestart %>
<% include ../partials/pageheader %>

	   <script>var commentObject = <%-JSON.stringify(JsonComments)%>;</script>

<div ng-controller="productController">
    <div ng-init="init('<%= countryIso %>','<%= product._id %>')">
        <div class="clear"></div>
        <!-- Breadcrumbs -->
        <section class="container">
            <nav class="breadcrumbs">
                <span class="maincrumb"><a href="/{{IsoCode}}/Home">Home</a></span>
                <span class="maincrumb"><span class="divider">›</span><span href="/{{IsoCode}}/Product/<%= product.Name %>/<%= product._id %>"><span> <%= product.Name %></span></span></span>
            </nav>
        </section>
        <!-- //end Breadcrumbs -->
        <!-- One column content -->
        <section class="container">

            <!-- Product view -->
            <div class="product-view row">

                <div class="col-sm-6 col-md-6 col-lg-6">
                    <div class="large-image"> <img alt="#" class="cloudzoom" src="<%= product.Pictures[0].URL %>" data-cloudzoom="zoomImage: '<%= product.Pictures[0].URL %>', autoInside : 991" /> </div>
                    <div class="flexslider flexslider-thumb">
                        <ul class="previews-list slides">
                            <% product.Pictures.forEach(function(img){ %>
                            <li><img class='cloudzoom-gallery' alt="#" src="<%= img.URL %>" data-cloudzoom="useZoom: '.cloudzoom', image: '<%= img.URL %>', zoomImage: '<%= img.URL %>', autoInside : 991"></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>


                <div class="col-sm-6 col-md-6 col-lg-6">

                    <!-- Product label -->
                    <div class="product-label">
                        <div class="box-wrap">
                            <div class="box-wrap-top"></div>
                            <div class="box-wrap-bot"></div>
                            <div class="box-wrap-center"></div>
                            <div class="box">
                                <div class="box-content">
                                    <h2><%= product.Name %></h2>
                                    <% if (product.PriceBeforeSale) { %>
                                    <span class="price old">$ <%= product.PriceBeforeSale %></span>
                                    <% }; %>
                                    <% if (product.Price) { %>
                                    <span class="price new">$ <%= product.Price %></span> <br>
                                    <% }; %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- //end Product label -->
                    <div class="row">

                        <div class="col-xs-12">
                            <!-- Description -->
                            <div class="product-description">
                                <span class="rating"> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-empty"></i> </span>
                                <div class="panel-group accordion-simple" id="product-accordion">
                                    <div class="panel">
                                        <div class="panel-heading"> <a data-toggle="collapse" data-parent="#product-accordion" href="#product-description"> <span class="arrow-down icon-arrow-down-4"></span> <span class="arrow-up icon-arrow-up-4"></span> Description </a> </div>
                                        <div id="product-description" class="panel-collapse collapse in">
                                            <div class="panel-body"> <%= product.Description %></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- //end Description -->
                        </div>

						<div class="col-xs-1"></div>
						<div class="col-xs-3" ng-show="loggedUser">
                            <span ng-click="addToFavorites('<%= product._id %>')" ng-class="{'glyphicon-heart-empty' : IsFav == false , 'glyphicon-heart IsFavItem' : IsFav == true }" class="glyphicon text-muted iconFav" title="add to favorites"></span>
                        </div>
                        <div class="col-xs-3">

                            <a ng-click="fbshareCurrentPage('<%= product.Name %>')" class="btn btn-sm facebookShare" target="_blank" alt="Share on Facebook">
                                <i class="fa fa-facebook-square fa-1"><span> Share</span></i>
                            </a>

                        </div>
                        <div class="col-xs-3">
                            <a class="twitter-share-button"
                               href="https://twitter.com/intent/tweet?text=<%= product.Name %>&image=https://www.booktopia.com.au/http_coversbooktopiacomau/big/9781426310140/nat-geo-little-kids-first-big-book-of-space.jpg">
                                Tweet
                            </a>
                        </div>

                        <div class="spacer1"></div>

                        <div class="col-xs-12">
                            <section class="dvAdvertise">
                                <img class="img-responsive" src="/images/adv3.png" />
                            </section>
                        </div>

                    </div>
                </div>
            </div>
            <!-- //end Product view --> <!-- Services -->
            <section class="services-block single small row">
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 divider-right">
                    <a href="#" class="item">
                        <span class="icon icon-tags-2"></span>
                        <div class="text"> <span class="title">Special offer 1+1=3</span> <span class="description">Get a gift!</span></div>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 divider-right">
                    <a href="#" class="item">
                        <span class="icon icon-credit-card"></span>
                        <div class="text"><span class="title">FREE reward card</span> <span class="description">Worth 10$, 50$, 100$</span></div>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 divider-right">
                    <a href="#" class="item">
                        <span class="icon icon-users-2"></span>
                        <div class="text"> <span class="title">Join our club</span></div>
                    </a>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 divider-right">
                    <a href="#" class="item">
                        <span class="icon icon-truck"></span>
                        <div class="text"><span class="title">Free shipping</span> </div>
                    </a>
                </div>
            </section>
            <!-- //end Services -->
            <!-- comments part -->
            <section class="container-fluid dvComments">

                <div class="row">
                    <h2>Comments</h2>
                    <div class="timeline">


                        <div class="timeline-item timeline-item-right" ng-repeat="comment in commentsList track by comment._id">
                            <!--<img class="timeline-photo" src="http://www.gettyimages.com/gi-resources/images/Embed/new/embed2.jpg" />-->
                            <div class="timeline-point timeline-point-blank"></div>
                            <div class="timeline-event timeline-event-default">
                                <div class="timeline-heading">
                                    <h4>{{comment.userName}}</h4>
									<button type="button" title="delete comment" class="btn btn-link"><span class="glyphicon glyphicon-remove"></span></button>
                                </div>
                                <div class="timeline-body">
                                    <p>{{comment.comment}}</p>
                                </div>
                                <div class="timeline-footer">
                                    <p class="text-right">{{comment.date}}</p>
                                </div>
                            </div>
                        </div>


                        
                    </div>
                    <div class="spacer1"></div>

                    <h2>Add your comment</h2>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-8 col-xs-offset-1">
                                <textarea placeholder="add comment" ng-model="commentTxt"></textarea>
                            </div>
                            <div class="col-xs-3 text-center">
                                <button type="submit" ng-disabled="!commentTxt" ng-click="submitComment()" class="btn btn-primary">
                                    <span class="fa fa-paper-plane-o"></span>&nbsp; Send
                                </button>
                            </div>
                        </div>
                        <div class="spacer1"></div>
                    </div>
                </div>
                <hr />
            </section>
            <!-- // end comments part -->



            <!-- Upsell products -->
            <section class="slider-products content-box">
                <h3>Simillar products</h3>

                <!-- Products list -->
                <div class="products-list-small">
                    <ul class="slides">
                        <% if (similarProducts.length > 0) { %>
                        <% similarProducts.forEach(function(product){ %>
                        <li>
                            <div class="product-preview">
                                <div class="preview  wow zoomIn" data-wow-offset="30" data-wow-duration="1s" data-wow-delay="0.5s">
                                    <a href="#"><img class="wow zoomIn" data-wow-offset="30" data-wow-duration="1s" data-wow-delay="0.5s" src="<%= product.img %>" alt=""></a>
                                    <a href="#" class="quick-view"> <span class="icon-zoom-in-2"></span> View </a>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                        <% } else { %>
                        <p class="txtNoData"> No data available </p>
                        <% } %>

                    </ul>
                </div>
                <!-- //end Products list -->
                <!-- Product view compact -->
                <div class="product-view-ajax">
                    <div class="ajax-loader progress progress-striped active">
                        <div class="progress-bar progress-bar-danger" role="progressbar"></div>
                    </div>
                    <div class="layar"></div>
                    <div class="product-view-container"> </div>
                </div>
                <!-- //end Product view compact -->

            </section>
            <!-- //end Upsell products -->

        </section>
        <!-- //end Two columns content -->
    </div>
</div>
<% include ../partials/pagefooter %>
<% include ../partials/pageend %>
<script src="/scripts/product.js"></script>
<% include ../partials/pagesocial %>
</body>

</html>