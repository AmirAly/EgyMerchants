<!DOCTYPE html>
<html lang="en" ng-app="app">
  <head>
        <title>Market</title>
        <!-- Favicon -->
        <link rel="shortcut icon" href="/images/favicon.png">
        <meta charset="utf-8"/>
        <!-- IE Compatibility meta-->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!--first mobile meta-->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/animation/animate.min.css" rel="stylesheet">
        <!--[if lt IE 9]>
          <script src="/js/general/html5shiv.min.js"></script>
          <script src="/js/general/respond.min.js"></script>
        <![endif]-->
    </head>
<body class="pageLanding" ng-controller="landingController" ng-init="init(<%= JsonCountries %>,<%= JsonCategories %>)">      
<div class="colordLayer"></div>
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-6 big">
                <img src="/images/Expoeveryday.png">
            </div>
            <div class="col-md-5 big">
                <h1 class="wow slideInDown" data-wow-duration="2s">WELLCOME</h1>
                <p class="wow slideInUp" data-wow-duration="2s">{{selectedCountry.WelcomeMsg}}</p>
				
						<div ng-repeat="category in allcategories" class="wow bounceInRight txtCategoryContainer" data-wow-duration="2s">
							<a href="/Eg/Expos/{{category._id}}">{{category.Name}}</a>
						</div>
					 <p ng-show="countryCategories.length > 0" class="txtNoData"> No Categories Available </p>
           </div>
        <div class="col-sm-1 small">
            <div class="dropdown">
              <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <img class="pin" src="{{selectedCountry.Flag}}"/> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
						<li ng-repeat="country in allCountries" ng-click="changeCountry(country._id)">
						   <a href="#"><img src="{{country.Flag}}"/></a>
						</li>
              </ul>
            </div>  
        </div>
    </div>
        
       
</div>
<!-- JaveScript Filles-->
    <script src="/js/general/jquery-1.11.1.min.js"></script>
    <script src="/js/general/bootstrap/bootstrap.min.js"></script>
    <script src="/js/general/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
	
	 <script type="text/javascript" src="/js/general/angular.min.js"></script>
     <script type="text/javascript" src="/js/app.js"></script>
	 <script type="text/javascript" src="/js/directives.js"></script>
     <script type="text/javascript" src="/js/warehouse.js"></script>

	 <script type="text/javascript" src="/js/controllers/landingcontroller.js"></script>

  </body>
</html>