<% include ../partials/pagestart %>
<% include ../partials/pageheader %>



<div class="clear"></div>
<span id="galleryId" class="hide"><%= gallery._id %></span>
<span id="galleryName" class="hide"><%= gallery.Title %></span>
<!-- Breadcrumbs -->
<section class="container">
    <nav class="breadcrumbs">
        <span class="maincrumb"><a href="/eg/Home">Home</a></span>
        <span class="maincrumb"><span class="divider">›</span><span id="StoreNameLink"><span id="StoreName"></span></span></span>
        <span class="maincrumb"><span class="divider">›</span><a href="/Eg/Gallery/<%= gallery.Title %>/<%= gallery._id %>"><span><%= gallery.Title %></span></a></span>
    </nav>
</section>
<!-- //end Breadcrumbs -->
<!-- One column content -->
<section class="container responsive  ">
<div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
    <!-- Description -->
    <p><%= gallery.Description %></p>
    <!-- //end Description -->
    <!-- Products list -->
    <div class="row products-list">
       <% if (products.length > 0) { %>
        <% products.forEach(function(product){ %>
        <div class="product-preview ">
            <div class="preview animate scale">
                <a href="/Eg/Product/<%= product.Name %>/<%= product._id %>" class="preview-image"><img class="img-responsive animate scale" src="<%= product.Pictures[0].URL %>" width="270" height="328" alt=""></a>
                <ul class="product-controls-list right hide-right">
                    <li class="top-out"></li>
                    <li><a href="#" class="circle"><span class="icon-heart"></span></a></li>
                    <li><a href="#" class="circle"><span class="icon-justice"></span></a></li>
                    <li><a href="#" class="cart"><span class="icon-basket"></span></a></li>
                </ul>
                <a href="/Eg/Product/<%= product.Name %>/<%= product._id %>" class="quick-view  hidden-xs"> <span class="rating"> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-empty"></i> </span> <span class="icon-zoom-in-2"></span> Quick View </a>
                <div class="quick-view visible-xs"> <span class="rating"> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-3"></i> <i class="icon-star-empty"></i> </span></div>
            </div>
            <h3 class="title"><a href="/Eg/Product/<%= product.Name %>/<%= product._id %>"><%= product.Name %></a></h3>
            <span class="price"><%= product.Price %></span>
        </div>
        <% }); %>
		<% } else { %>
		<p> No Data Available </p>
		<% } %>

    </div>
    <!-- //end Products list -->
    <!-- Product view compact -->
    <div class="product-view-ajax">
        <div class="ajax-loader progress progress-striped active">
            <div class="progress-bar progress-bar-danger" role="progressbar"></div>
        </div>
        <div class="layar"></div>
        <div class="product-view-container"> </div>
    </div>
    <!-- //end Product view compact -->
	</div>

 <section class="hidden-xs col-sm-2 col-md-2 col-lg-2 dvAdvertise">
                    <img class="img-responsive" src="/images/adv1.jpg" />
</section>

</section>

<!-- //end One columns content -->


<% include ../partials/pagefooter %>
<% include ../partials/pageend %>

<script src="/scripts/gallery.js"></script>
<% include ../partials/pagesocial %>

</body>

</html>