<% include ../partials/pagestart %>
<% include ../partials/pageheader %>


<div ng-controller="contactusController">
    <div ng-init="init('<%= countryIso %>')">
        <div class="clear"></div>
        <section class="container">
            <nav class="breadcrumbs"> <a href="/{{IsoCode}}/Home">Home</a> <span class="divider">›</span> Contact us </nav>
        </section>
        <!-- Two column content -->
        <section class="container contacts">
            <div class="row">
                <section class="col-md-4 col-lg-4">
                    <h3>Contact us</h3>
                    <ul class="simple-list compressed-list address">
                        <li><span class="icon icon-house"></span> El imam towers, Tanta, Egypt</li>
                        <li><span class="icon icon-phone-4"></span> 321321321, 321321321</li>
                        <li><span class="icon icon-envelop"></span> <a href="#">info@appout.co</a></li>
                    </ul>
                    <div class="map">
                        <div id="map" style="height: 400px;width: 100%;"></div>
                    </div>
                </section>
                <section class="col-md-8 col-lg-8">

                    <!-- Contact us form -->
                    <div class="contacts-form">
                        <div class="wrap-paper">
                            <div class="paper">
                                <h3>Contact form</h3>

                                <div id="success">
                                    <p>Your message was sent successfully!</p>
                                </div>
                                <div id="error">
                                    <p>Something went wrong, try refreshing and submitting the form again.</p>
                                </div>

                                <form role="form" id="contactform" class="boxed-form" name="frmContact" novalidate="novalidate">
                                    <div class="form-group">
                                        <span class="icon icon-user"></span>
                                        <input type="text" name="txtName" class="form-control" placeholder="Name" ng-model="contactObj.Name" required>
                                        <span ng-show="frmContact.txtName.$touched  && frmContact.txtName.$invalid">
                                            <span class="errorFont" ng-show="frmContact.txtName.$error.required">Name is required</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <span class="icon icon-phone-4"></span>
                                        <input type="text" name="txtPhone" class="form-control" placeholder="Phone Number" ng-model="contactObj.Phone">

                                    </div>
                                    <div class="form-group">
                                        <span class="icon icon-envelop"></span>
                                        <input type="text" name="txtEmail" class="form-control" placeholder="E-Mail" ng-model="contactObj.Email" required>
                                        <span ng-show="frmContact.txtEmail.$touched  && frmContact.txtEmail.$invalid">
                                            <span class="errorFont" ng-show="frmContact.txtEmail.$error.required">Email is required</span>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <span class="icon icon-bubbles-2"></span>
                                        <textarea class="form-control" name="txtMessage" placeholder="Message" ng-model="contactObj.Message" required></textarea>
                                        <span ng-show="frmContact.txtMessage.$touched  && frmContact.txtMessage.$invalid">
                                            <span class="errorFont" ng-show="frmContact.txtMessage.$error.required">Message text is required</span>
                                        </span>
                                    </div>
                                    <button type="submit" ng-disabled="frmContact.$invalid || dataLoading" ng-click="submit(frmContact)" class="btn btn-mega">
                                    SEND MESSAGE &nbsp;
                                        <img ng-show="dataLoading" src="data:image/gif;base64," />
                                    </button>

                                </form>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <img class="back" src="/images/contacts-back.png" alt="">
                    </div>
                    <!-- //end Contact us form -->

                </section>
            </div>
        </section>

    </div>
</div>
<% include ../partials/pagefooter %>
<% include ../partials/pageend %>
<% include ../partials/pagesocial %>

<script>
    function initMap() {
        var latlng = { lat: 30.799074, lng: 31.009416 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: latlng
        });
        var marker = new google.maps.Marker({
            position: latlng,
            map: map
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD2CuttoU8t1XvRLSzujSe85kBH-RYMweM&callback=initMap"></script>
</body>

</html>