    <!-- Start Modal -->
    <div class="modal fade bs-example-modal-lg" tabindex="1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Add Country</h4>
                </div>
                <div class="modal-body">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header" data-background-color="orange">
                                            <h4 class="title">Creat Country</h4>
                                            <p class="category">Creat A New Country</p>
                                        </div>
                                        <div class="card-content">
                                            <form name="frmAddCountry">
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <div class="form-group label-floating">
                                                            <label class="control-label">Country name</label>
                                                            <input type="text" class="form-control" ng-model="country.Title" required pattern="^.{1,35}$" name="countryTitle" id="countryTitle">
                                                            <span ng-show="frmAddCountry.countryTitle.$dirty && frmAddCountry.countryTitle.$invalid">
                                                                <span class="errorFont" ng-show="frmAddCountry.countryTitle.$error.required">Required</span>
                                                                <span class="errorFont" ng-show="frmAddCountry.countryTitle.$error.pattern">Country name is too long</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <div class="form-group label-floating">
                                                            <label class="control-label">Country iso code</label>
                                                            <input type="text" class="form-control" ng-model="country.Iso" required pattern="^.{1,3}$" name="countryIso" id="countryIso">
                                                            <span ng-show="frmAddCountry.countryIso.$dirty && frmAddCountry.countryIso.$invalid">
                                                                <span class="errorFont" ng-show="frmAddCountry.countryIso.$error.required">Required</span>
                                                                <span class="errorFont" ng-show="frmAddCountry.countryIso.$error.pattern">Country IsoCode is too long</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-8">
                                                        <div class="form-group label-floating">
                                                            <label class="control-label">Welcome message</label>
                                                            <input type="text" class="form-control" ng-model="country.Msg" required pattern="^.{1,35}$" name="countryMsg" id="countryMsg">
                                                            <span ng-show="frmAddCountry.countryMsg.$dirty && frmAddCountry.countryMsg.$invalid">
                                                                <span class="errorFont" ng-show="frmAddCountry.countryMsg.$error.required">Required</span>
                                                                <span class="errorFont" ng-show="frmAddCountry.countryMsg.$error.pattern">Country welcome message is too long</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="clearfix"></div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header card-chart">
                                            <!--upload img-->
                                            <div>
                                                <img fallbacksrc="" id="imgItem" ng-click="ShowFileSelector()" class="img-responsive cursorPointer imgItem" src="/img/add.gif" />
                                                <input type="file" onchange="convertImgToBase64URL(event)" id="uploadItemImage" class="hide" />
                                            </div>
                                        </div>
                                        <div class="card-content">
                                            <h4 class="title itemTitle">{{country.Title}}</h4>
                                            <p class="category">{{country.Description}}</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" ng-click="addCountry()" ng-disabled="frmAddCountry.$invalid" class="btn btn-primary">Save changes</button>
                </div>
            </div>
