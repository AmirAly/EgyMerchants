    <!-- Start Modal -->
    <div class="modal fade bs-example-modal-lg" tabindex="1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Add Expo</h4>
                </div>
                <div class="modal-body">
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header" data-background-color="orange">
                                            <h4 class="title">Creat Expo</h4>
                                            <p class="category">Creat A New Expo</p>
                                        </div>
                                        <div class="card-content">
                                            <form name="frmAddExpo">
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <div class="form-group label-floating">
                                                            <label class="control-label">Expo Name</label>
                                                            <input type="text" class="form-control" ng-model="expo.Title" required pattern="^.{1,35}$" name="expoTitle" id="expoTitle">
                                                            <span ng-show="frmAddExpo.expoTitle.$dirty && frmAddExpo.expoTitle.$invalid">
                                                                <span class="errorFont" ng-show="frmAddExpo.expoTitle.$error.required">Required</span>
                                                                <span class="errorFont" ng-show="frmAddExpo.expoTitle.$error.pattern">Expo name is too long</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <div class="form-group label-floating">
                                                                <label class="control-label"> About Expo</label>
                                                                <textarea class="form-control" rows="3" ng-model="expo.Description" required pattern="^.{1,200}$" name="expoDesc" id="expoDesc"></textarea>
                                                                <span ng-show="frmAddExpo.expoDesc.$dirty && frmAddExpo.expoDesc.$invalid">
                                                                    <span class="errorFont" ng-show="frmAddExpo.expoDesc.$error.required">Required</span>
                                                                    <span class="errorFont" ng-show="frmAddExpo.expoDesc.$error.pattern">Expo description is too long</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header card-chart">
                                            <!--upload img-->
                                            <div>
                                                <img fallbacksrc="" id="imgItem" ng-click="ShowFileSelector()" class="img-responsive cursorPointer imgItem" src="/img/add.gif" />
                                                <input type="file" onchange="convertImgToBase64URL(event)" id="uploadItemImage" class="hide" />
                                            </div>
                                        </div>
                                        <div class="card-content">
                                            <h4 class="title itemTitle">{{expo.Title}}</h4>
                                            <p class="category">{{expo.Description}}</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
