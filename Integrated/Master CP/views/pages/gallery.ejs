<% include ../partials/headpages %>
<div ng-controller='galleryController'>
    <div class="loaderContainer" ng-show="loading"></div>
    <div class="loader" ng-show="loading"></div>
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="/img/sidebar-1.jpg">
            <div class="logo">
                <a href="http://appout.co" class="simple-text">
                    AppOut.LLC
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active">
                        <a href='/eg/g/galleries/{{storeId}}'>
                            <i class="material-icons">dashboard</i>
                            <p>Galleries</p>
                        </a>
                    </li>
                    <li>
                        <a href="/eg/store/{{storeId}}">
                            <i class="material-icons">person</i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li ng-click="signOut()" class="cursorPointer">
                        <a>
                            <i class="material-icons">person</i>
                            <p>Sign Out</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-transparent navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <h4>Edit Gallery</h4>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    <!-- Start Breadcrumbs -->
                    <div class="col-md-8">
                        <ol class="breadcrumb">
                            <li>
                                <a href="/eg/g/galleries/{{storeId}}">Galleries</a>
                            </li>
                            <li class="active">Edit Gallery</li>
                        </ol>
                    </div>
                    <!-- End Breadcrumbs -->
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header" data-background-color="orange">
                                    <h4 class="title">Edit Gallery</h4>
                                    <p class="category">Edit your Gallery</p>
                                </div>
                                <div class="card-content">
                                    <form name="frmUpdateGallery">
                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group label-floating is-focused ">
                                                    <label class="control-label">Gallery Name</label>
                                                    <input type="text" class="form-control" value="<%= gallery.Title %>" ng-init="gallery.Title = '<%= gallery.Title %>'" ng-model="gallery.Title" name="galleryTitle" id="galleryTitle" required pattern="^.{1,35}$">
                                                    <span ng-show="frmUpdateGallery.galleryTitle.$dirty && frmUpdateGallery.galleryTitle.$invalid">
                                                        <span class="errorFont" ng-show="frmUpdateGallery.galleryTitle.$error.required">Required</span>
                                                        <span class="errorFont" ng-show="frmUpdateGallery.galleryTitle.$error.pattern">Gallery name is too long</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <div class="form-group label-floating is-focused ">
                                                        <label class="control-label"> About Me</label>
                                                        <textarea class="form-control" value="<%= gallery.Description %>" ng-init="gallery.Description = '<%= gallery.Description %>'" rows="3" ng-model="gallery.Description" required name="galleryDesc" id="galleryDesc" pattern="^.{1,200}$"><%= gallery.Description %></textarea>
                                                        <span ng-show="frmUpdateGallery.galleryDesc.$dirty && frmUpdateGallery.galleryDesc.$invalid">
                                                            <span class="errorFont" ng-show="frmUpdateGallery.galleryDesc.$error.required">Required</span>
                                                            <span class="errorFont" ng-show="frmUpdateGallery.galleryDesc.$error.pattern">Gallery description is too long</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" ng-click="updateGallery()" ng-disabled="frmUpdateGallery.$invalid" class="btn btn-primary pull-right">Update Gallery</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header card-chart">
                                    <!--upload img-->
                                    <div>
                                        <img fallbacksrc="" id="imgItem" ng-click="ShowFileSelector()" class="img-responsive cursorPointer imgItem" src="<%= gallery.DisplayPicture %>" />
                                        <input type="file" onchange="convertImgToBase64URL(event)" id="uploadItemImage" class="hide" />
                                    </div>
                                </div>
                                <div class="card-content">
                                    <h4 class="title itemTitle"><%= gallery.Title %></h4>
                                    <p class="category"><%= gallery.Description %></p>
                                </div>
                                <div class="card-footer">
                                    <div class="stats">
                                        <a ng-click="moveToItems('<%= gallery._id %>')" class="cursorPointer">
                                            <i class="fa fa-eye" aria-hidden="true"></i> View Items
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <% include ../partials/footerpages %>
            </footer>
        </div>
    </div>
</div>
<!--   Core JS Files   -->
<% include ../partials/pagesjsfiles %>
